# Ambiente de execução (development, staging, production)
NODE_ENV=development

# Configurações do banco de dados
DB_HOST=localhost
DB_PORT=1433
DB_USERNAME=avf_login
DB_PASSWORD=avf_password
DB_DATABASE=WebAVF

# Configurações de sincronização e migrações
# DB_SYNCHRONIZE: true para development/staging, false para production
DB_SYNCHRONIZE=true
# DB_RUN_MIGRATIONS: true para executar migrações automaticamente
DB_RUN_MIGRATIONS=false
# DB_DROP_SCHEMA: true apenas para desenvolvimento (recria o schema)
DB_DROP_SCHEMA=false
# DB_LOGGING: true para logs detalhados do banco
DB_LOGGING=true

# Configurações de pool de conexões
# DB_POOL_MAX: máximo de conexões simultâneas no pool
DB_POOL_MAX=10
# DB_POOL_MIN: mínimo de conexões mantidas no pool
DB_POOL_MIN=2
# DB_POOL_ACQUIRE: tempo limite para adquirir conexão (ms)
DB_POOL_ACQUIRE=30000
# DB_POOL_IDLE: tempo máximo de inatividade antes de fechar conexão (ms)
DB_POOL_IDLE=10000

# Configurações da API
PORT=9832

# Frontend URLs permitidas (separadas por vírgula em produção)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:9832

# JWT
JWT_SECRET=dev_JWT$WgwodK%g9!A!gvK-6y7HQ21d
JWT_EXPIRATION=3600