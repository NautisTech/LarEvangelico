# Configurações para ambiente de produção
NODE_ENV=production

# Banco de dados - Produção
DB_HOST=production-db-server
DB_PORT=1433
DB_USERNAME=avf_prod_user
DB_PASSWORD=avf_production_secure_password
DB_DATABASE=WebAVF_PROD

# Configurações de sincronização e migrações - Produção
# ATENÇÃO: Em produção, sincronização automática deve estar DESABILITADA
DB_SYNCHRONIZE=false
DB_RUN_MIGRATIONS=true
DB_DROP_SCHEMA=false
DB_LOGGING=false

# Pool de conexões - Produção (configuração otimizada para alta carga)
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# API
PORT=80

# JWT - Use uma chave secreta forte em produção
JWT_SECRET=prod_JWT$hs45!zE3j-gsxjF23Sk%Dfs
JWT_EXPIRATION=3600
